sudo: required
dist: trusty
language: node_js
node_js:
    - "5.1"
env:
    global:
        - CXX=g++-5
addons:
    apt:
        sources:
            - ubuntu-toolchain-r-test
        packages:
            - g++-5
            - gcc-5
before_install:
    - python3 --version
    - python3-config --cflags
    - python3-config --ldflags
    - export LD_LIBRARY_PATH=`python3-config --prefix`/lib
